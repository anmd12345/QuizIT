            </svg>
        </button>
    </div>
    <small>
        <a href="@Url.Action("QuenMatKhau","NguoiDung")" class="a2">Quên mật khẩu?</a>
    </small>
    <p>Bạn chưa có tài khoản? <a href="/NguoiDung/DangKy" class="a2">Đăng ký ngay!</a></p>
</div>
<script>

    function LoginWithGoogle(url) {
        window.location.href = url;
    }

    function LoginWithGithub(url) {
        window.location.href = url;
    }


    function Login() {
        var tenDangNhap = $("#TenDangNhap").val();
        var matKhau = $("#MatKhau").val();
        $.ajax({
            type: "POST",
            url: "@Url.Action("DangNhap", "NguoiDung")",
            data: { "username": tenDangNhap, "password": matKhau },
            success: function (data) {
                console.log(data);
                if (data != "OK") {
                    if (data != "NO") {
                        if (parseInt(data) >= 6) {
                            $('#message').html('<div class="alert alert-danger" role="alert">Tài khoản của bạn đã bị khóa do nhập sai mật khẩu quá nhiều!</div >');
                        } else {
                            $('#message').html('<div class="alert alert-danger" role="alert">Mật khẩu không đúng! Bạn còn ' + (6 - parseInt(data)) + ' nhập sai.</div >');
                        }
                    } else {
                        $('#message').html('<div class="alert alert-danger" role="alert">Tài khoản của bạn đã bị khóa do nhập sai mật khẩu quá nhiều!</div >');
                    }

                    setTimeout(function () {
                        $('#message').html('');
                    }, 3000);
                } else {
                    $('#message').html('<div class="alert alert-success" role="alert">Thành công, Vui lòng chờ...</div >');
                    setTimeout(function () {
                        window.location.href = '/Home/Index';
                    }, 3000);
                }
            },
            error: function (error) {
                $('#message').html('<div class="alert alert-danger" role="alert">Tài khoản hoặc mật khẩu không đúng!</div >');
                console.log(error);
                setTimeout(function () {
                    $('#message').html('');
                }, 3000);
            }
        });
    }

    function handleKeyPress(event) {
        if (event.key === 'Enter') {
            Login();
        }
    }
</script>