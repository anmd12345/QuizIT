
@{
    ViewBag.Title = "Đổi mật khẩu - Trắc nghiệm IT";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    .login-box {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 400px;
        padding: 40px;
        margin: 20px auto;
        transform: translate(-50%, -55%);
        background: rgba(0,0,0,.9);
        box-sizing: border-box;
        box-shadow: 0 15px 25px rgba(0,0,0,.6);
        border-radius: 10px;
    }

        .login-box p:first-child {
            margin: 0 0 30px;
            padding: 0;
            color: #fff;
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
            letter-spacing: 1px;
        }

        .login-box .user-box {
            position: relative;
        }

            .login-box .user-box input {
                width: 100%;
                padding: 10px 0;
                font-size: 16px;
                color: #fff;
                margin-bottom: 30px;
                border: none;
                border-bottom: 1px solid #fff;
                outline: none;
                background: transparent;
            }

            .login-box .user-box label {
                position: absolute;
                top: 0;
                left: 0;
                padding: 10px 0;
                font-size: 16px;
                color: #fff;
                pointer-events: none;
                transition: .5s;
            }

            .login-box .user-box input:focus ~ label,
            .login-box .user-box input:valid ~ label {
                top: -20px;
                left: 0;
                color: #fff;
                font-size: 12px;
            }

        .login-box form a {
            position: relative;
            display: inline-block;
            padding: 10px 20px;
            font-weight: bold;
            color: #fff;
            font-size: 16px;
            text-decoration: none;
            text-transform: uppercase;
            overflow: hidden;
            transition: .5s;
            margin-top: 40px;
            letter-spacing: 3px
        }

        .login-box a:hover {
            background: #fff;
            color: #272727;
            border-radius: 5px;
        }

        .login-box a span {
            position: absolute;
            display: block;
        }

            .login-box a span:nth-child(1) {
                top: 0;
                left: -100%;
                width: 100%;
                height: 2px;
                background: linear-gradient(90deg, transparent, #fff);
                animation: btn-anim1 1.5s linear infinite;
            }

    @@keyframes btn-anim1 {
        0% {
            left: -100%;
        }

        50%, 100% {
            left: 100%;
        }
    }

    .login-box a span:nth-child(2) {
        top: -100%;
        right: 0;
        width: 2px;
        height: 100%;
        background: linear-gradient(180deg, transparent, #fff);
        animation: btn-anim2 1.5s linear infinite;
        animation-delay: .375s
    }

    @@keyframes btn-anim2 {
        0% {
            top: -100%;
        }

        50%, 100% {
            top: 100%;
        }
    }

    .login-box a span:nth-child(3) {
        bottom: 0;
        right: -100%;
        width: 100%;
        height: 2px;
        background: linear-gradient(270deg, transparent, #fff);
        animation: btn-anim3 1.5s linear infinite;
        animation-delay: .75s
    }

    @@keyframes btn-anim3 {
        0% {
            right: -100%;
        }

        50%, 100% {
            right: 100%;
        }
    }

    .login-box a span:nth-child(4) {
        bottom: -100%;
        left: 0;
        width: 2px;
        height: 100%;
        background: linear-gradient(360deg, transparent, #fff);
        animation: btn-anim4 1.5s linear infinite;
        animation-delay: 1.125s
    }

    @@keyframes btn-anim4 {
        0% {
            bottom: -100%;
        }

        50%, 100% {
            bottom: 100%;
        }
    }

    .login-box p:last-child {
        color: #aaa;
        font-size: 14px;
    }

    .login-box a.a2 {
        color: #fff;
        text-decoration: none;
    }

        .login-box a.a2:hover {
            background: transparent;
            color: #aaa;
            border-radius: 5px;
        }
</style>
<div class="container">
    <div id="message" class="text-center"></div>
</div>
<div class="login-box">
    <p>ĐỔI MẬT KHẨU</p>
    <form>
        <div class="user-box">
            <input required="" id="currentPassword" name="currentPassword" type="password">
            <label>Vui lòng nhập mật khẩu hiện tại</label>
        </div>
        <div class="user-box">
            <input required="" id="newPassword" name="newPassword" type="password">
            <label>Vui lòng nhập mật khẩu mới</label>
        </div>
        <div class="user-box">
            <input required="" id="comfirmNewPassword" name="comfirmNewPassword" type="password">
            <label>Xác nhận mật khẩu mới</label>
        </div>
        <div id="m"></div>
        <a style="cursor: pointer" onclick="ChangePassword()">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            ĐỔI MẬT KHẨU
        </a>
    </form>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#comfirmNewPassword').on('input', function () {
            var newPass = $('#newPassword').val();
            var comfirmNewPass = $(this).val();
            if (newPass != comfirmNewPass) {
                $('#m').html('<div class="alert alert-danger"><small>Xác nhận mật khẩu mới không đúng</small></div>');
            } else {
                $('#m').html('<span><span>');
            }
        });
    });

    function ChangePassword() {
        var currentPass = $('#currentPassword').val();
        var newPass = $('#newPassword').val();
        $.ajax({
            type: "POST",
            url: "@Url.Action("DoiMatKhau", "NguoiDung")",
            data: { "currentPassword": currentPass, "newPassword": newPass},
            success: function (data) {
                $('#m').html('<div class="alert alert-success" role="alert">Đổi mật khẩu thành công! Vui lòng đăng nhập lại hệ thống, xin cảm ơn! Hệ thống sẽ chuyển bạn tới trang đăng nhập trong giây lát!</div >');
                setTimeout(function () {
                    window.location.href = '/NguoiDung/DangXuat';
                }, 3000);
            },
            error: function () {
                $('#m').html('<div class="alert alert-danger" role="alert">Mật khẩu hiện tại không đúng! Hãy kiểm tra lại!</div >');
                setTimeout(function () {
                    $('#m').html('');
                }, 3000);
             }
        });
    }
</script>


