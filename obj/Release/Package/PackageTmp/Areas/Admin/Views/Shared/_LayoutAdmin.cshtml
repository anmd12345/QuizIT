    <script src="~/Areas/Admin/Statics/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Areas/Admin/Statics/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
