@using QUIZ_IT.Models;

@{
    ViewBag.Title = "Quản trị - Trắc nghiệm IT";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">

            <div class="col-sm-6">
                <h1>DANH SÁCH GIAO DỊCH</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Admin/Index">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Giao dịch</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div id="r"></div>
                    <div class="card-header">
                        <h3 class="card-title">Danh sách tất cả bài trắc nghiệm</h3>
                    </div>
                    <div class="card-body" id="content">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center">STT</th>
                                    <th class="text-center">Mã giao dịch</th>
                                    <th class="text-center">Số tiền giao dịch</th>
                                    <th class="text-center">Thời gian giao dịch</th>
                                    <th class="text-center">Nội dung thanh toán</th>
                                    <th class="text-center">Người thanh toán</th>
                                    <th class="text-center">Trạng thái thanh toán</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var i = 0;
                                    foreach (var item in Model)
                                    {
                                        ++i;
                                        <tr>
                                            <td class="text-center">@i</td>
                                            <td class="text-center">
                                                <div>@item.MaGiaoDich</div>
                                            </td>
                                            <td class="text-center">

                                                @if (@item.GiaTien == 25000)
                                                {
                                                    <div>25.000 vnđ</div>
                                                }
                                                else
                                                {
                                                    <div>100.000 vnđ</div>
                                                }

                                            </td>
                                            <td class="text-center">@item.NgayTao</td>
                                            <td class="text-center">
                                                @if (@item.GiaTien == 25000)
                                                {
                                                    <div>Nâng cấp gói <strong class="text-warning">cơ bản</strong></div>
                                                }
                                                else
                                                {
                                                    <div>Nâng cấp gói <strong class="text-danger">VIP PRO</strong></div>
                                                }
                                            </td>
                                            <td class="text-center">@item.NguoiDung.HoTen</td>
                                            @if (item.TrangThai == false)
                                            {
                                                <td class="text-center"><i class="fa fa-times" style="color: #ed0202;"></i></td>
                                            }
                                            else
                                            {
                                                <td class="text-center"><i class="fas fa-check" style="color: #36fa00;"></i></td>
                                            }
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
</section>