
@{
    ViewBag.Title = "Quản trị tài khoản- Trắc nghiệm IT";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">

            <div class="col-sm-6">
                <h1>DANH SÁCH TÀI KHOẢN NGƯỜI DÙNG</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Admin/Index">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Tài khoản</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div id="r"></div>
                    <div class="card-header">
                        <h3 class="card-title">Danh sách tất cả tài khoản</h3>
                    </div>
                    <div class="card-body" id="content">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center">STT</th>
                                    <th class="text-center">Tên tài khoản</th>
                                    <th class="text-center">Tên người dùng</th>
                                    <th class="text-center">Email</th>
                                    <th class="text-center">Cấp vip</th>
                                    <th class="text-center">Trạng thái tài khoản</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var i = 0;
                                    foreach (var item in Model)
                                    {
                                        ++i;
                                        <tr>
                                            <td class="text-center">@i</td>
                                            <td class="text-center">
                                                <div>@item.TaiKhoan</div>
                                            </td>
                                            <td class="text-center">

                                                @item.HoTen
                                            </td>
                                            <td class="text-center">@item.Email</td>
                                            <td class="text-center">
                                                @item.Vip
                                            </td>

                                            @if (item.TrangThai == true)
                                            {
                                                <td class="text-center"><i class="fa fa-times" style="color: #ed0202;"></i></td>
                                            }
                                            else
                                            {
                                                <td class="text-center"><i class="fas fa-check" style="color: #36fa00;"></i></td>
                                            }
                                            <td>
                                                <a href="#">Khóa tài khoản</a>
                                            </td>

                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
</section>